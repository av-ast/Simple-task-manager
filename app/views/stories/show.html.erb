<fieldset><legend><%= @story.title %></legend></fieldset>

<p>
  <b>Author:</b>
  <%= @story.user.name %>&nbsp;&lt;<%= @story.user.email %>&gt;
</p>

<p>
  <b>State:</b>
  <%= @story.state %>
</p>

<div class="story-content">
  <%= @story.content %>
</div>

<br/>
<h4>Post a comment</h4>
<%= form_for @comment do |f| %>
    <input type="hidden" name=comment[user_id] value="<%= @current_user.id %>">
    <input type="hidden" name=comment[story_id] value="<%= @story.id %>">
    <%= f.text_area :text, :size => "50x5" %>
    <br />
    <%= f.submit "Post", :class => "btn" %>
<% end %>

<table class="table table-striped table-bordered table-condensed">
<% @comments.each do |c| %>
    <tr><td>
        <div class="clear">
            <div class="float-left">
                <%= c.created_at.strftime("%d %b %H:%M")%>&nbsp;by&nbsp
            </div>
            <div class="float-left">
                <%= link_to c.user.name || c.user.email, c.user %>
            </div>
            <% if c.user == @current_user || current_user.role == "admin" %>
                <div class="float-right">
                    <%= link_to 'Destroy', c, :confirm => 'Are you sure?', :method => :delete %>
                </div>
            <% end %>
            </div>
        </div>
        <div class="clear"><%= c.text%></div>
    </td></tr>
<% end %>
</table>

<%= link_to 'Edit', edit_story_path(@story) %> |
<%= link_to 'Back', stories_path %>
