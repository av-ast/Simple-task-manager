<%= form_for(@story) do |f| %>
  <% if @story.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@story.errors.count, "error") %> prohibited this story from being saved:</h2>

      <ul>
      <% @story.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content, :size => "50x10" %>
  </div>
  <div class="field">
    <%= f.label :user %><br />
    <%= f.select "user_id", options_from_collection_for_select(@users, "id", "name", @story.user_id) %>
  </div>
  <div class="field">
    <%= f.label :state %><br />
    <%= f.select "state", options_for_select(@story.state_events.unshift(@story.state)) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
